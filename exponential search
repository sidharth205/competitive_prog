#include<iostream>
#include<cmath>
using namespace std;
int main(){
    int n, search, i;
    cout << "Enter number of elements: ";
    cin >> n;
    int arr[n];
    cout << "Enter " << n << " elements (sorted order): ";
    for(i=0;i<n;i++){
        cin >> arr[i];
    }
    cout << "Enter element to be searched: ";
    cin >> search;
    int bound = 1;
    while(bound < n && arr[bound] < search){
        bound *= 2;
    }
    int left = bound / 2;
    int right = min(bound, n-1);
    for(i=left;i<=right;i++){
        if(arr[i] == search){
            cout << "Element found at index " << i << endl;
            return 0;
        }
    }
    cout << "Element not found" << endl;
    return 0;
}
