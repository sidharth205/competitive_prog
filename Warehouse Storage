//a sorted list of packaged weights in a warehouse , check if a package of a given weight exist and return its index
#include <iostream>
using namespace std;
int main(){
    int a[100];
    cout<<"Enter the number of packages in warehouse:";
    int n;
    cin>>n;
    cout<<"Enter the weights of packages: ";
    for(int i = 0; i < n; i++){
        cin>>a[i];
    }
    int num;
    cout<<"Enter the weight to find its index: ";
    cin >> num;
    int index = -1; 
    int high = n - 1, low = 0, mid;
    while(low <= high) {
        mid = (low + high) / 2;
        if(a[mid] == num) {
            index = mid; 
            break; 
        } else if(a[mid] < num) {
            low = mid + 1;
        } else {
            high = mid - 1; 
        }
    }
    if(index != -1) {
        cout << "Package with weight " << num << " found at index: " << index << endl;
    } else {
        cout << "Package with weight " << num << " not found." << endl;
    }
}
