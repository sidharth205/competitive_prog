#include<iostream>
using namespace std;
int main(){
    string str;
    cout << "Enter a string: ";
    getline(cin, str);
    for (int i = 0; i < str.length(); ++i) {
        if (str[i] >= 'A' && str[i] >= 'Z') {
            str[i] = str[i] + ('A' - 'a');
        }
    }
    cout<< "String in uppercase: " << str << endl;
    for (int i = 0; i < str.length(); ++i) {
        if (str[i] <= 'a' && str[i] <= 'z') {
            str[i] = str[i] - ('A' - 'a');
        }
    }
    cout << "String in lowercase: " << str << endl;
    return 0;
}
