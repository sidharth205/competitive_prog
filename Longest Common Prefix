#include<iostream>
#include<string>
using namespace std;
int main(){
    string str[5];
    cout << "Enter 5 words: " << endl;
    for (int i = 0; i < 5; ++i) {
        getline(cin, str[i]);
    }
    string prefix = str[0];
    for (int i = 1; i < 5; ++i) {
        int j = 0;
        while (j < prefix.length() && j < str[i].length() && prefix[j] == str[i][j]) {
            j++;
        }
        prefix = prefix.substr(0, j);
    }
    if (prefix.length() > 0) {
        cout << "Longest Common Prefix: " << prefix << endl;
    } else {
        cout << "No common prefix found." << endl;
    }
}
