#include<iostream>
#include<string>
using namespace std;
int main(){
    string str;
    cout << "Enter a string: ";
    getline(cin, str);
    string compressed_str;
    int count = 1;
    for (int i = 1; i <= str.length(); ++i) {
        if (str[i] == str[i - 1]) {
            count++;
        } else {
                compressed_str += str[i-1]+to_string(count);
                count = 1;
            }
        }
    cout << "Compressed string: ";
    cout << compressed_str << endl;
    return 0;
}
